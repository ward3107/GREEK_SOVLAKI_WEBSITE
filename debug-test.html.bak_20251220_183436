    <script>
        function createTestElement() {
            const element = document.createElement('div');
            element.style.cssText = 'background: #4CAF50; color: white; padding: 10px; margin: 10px 0; border-radius: 5px;';
            element.textContent = 'âœ… JavaScript DOM Manipulation Works!';
            document.getElementById('test-area').appendChild(element);
        }

        function hideBanner() {
            document.getElementById('pwa-test-banner').style.display = 'none';
        }

        function showBanner() {
            document.getElementById('pwa-test-banner').style.display = 'block';
        }

        console.log('Debug test page loaded');
        alert('Debug page loaded - JavaScript is working!');
    </script>
